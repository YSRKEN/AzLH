<Window x:Class="AzLH.Views.MainView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:AzLH.ViewModels"
	mc:Ignorable="d"
	Title="AzurLane Helper" Height="300" Width="300">
	<Window.DataContext>
		<local:MainViewModel/>
	</Window.DataContext>
	<Grid Margin="5,5,5,5">
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid Grid.Row="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="auto"/>
				<ColumnDefinition Width="auto"/>
			</Grid.ColumnDefinitions>
			<Button Grid.Column="0" Width="80" Height="24" Margin="5,5,5,5" Content="座標取得"
					Command="{Binding GetGameWindowPositionCommand}" />
			<Button Grid.Column="1" Width="80" Height="24" Margin="5,5,5,5" Content="画像保存"
					Command="{Binding SaveScreenshotCommand}"
					IsEnabled="{Binding SaveScreenshotFlg.Value, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
		</Grid>
		<TextBox Grid.Row="1" IsReadOnly="True" AcceptsReturn="True" Margin="5,5,5,5"
				Text="{Binding ApplicationLog.Value, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
	</Grid>
</Window>
